<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 달력 안의 숫자들에 적용되는 스타일 -->
    <style name="customCvDateText">
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <!-- 달력 안의 요일들에 적용되는 스타일 -->
    <style name="customCvWeekDayText">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- 연, 월을 표시하는 헤더에 적용되는 스타일 -->
    <style name="customCvHeaderText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <!-- 선택된 날짜들에 적용되는 스타일 -->
    <style name="customCvSelectedDateText">
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>
