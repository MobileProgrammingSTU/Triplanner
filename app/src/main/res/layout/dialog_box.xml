<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/planner_date_calendar_view_bg"
    android:backgroundTint="@color/colorGrayBG2"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/dlgTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="회원 탈퇴"
            android:textColor="@color/colorFontEmphasis"
            android:textSize="26dp"/>

        <TextView
            android:id="@+id/dlgContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="정말로 탈퇴하시겠습니까?"
            android:textColor="@color/colorFontNormal"
            android:textSize="20dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal"
            android:padding="8dp">
            <Button
                android:id="@+id/dlgBtnCancel"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:foreground="?attr/selectableItemBackground"
                android:background="@drawable/dialog_btn_cancel"
                android:text="취소"
                android:textColor="@color/colorBrandBlue"
                android:textSize="18dp"
                android:textFontWeight="580"/>
            <Button
                android:id="@+id/dlgBtnConfirm"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:foreground="?attr/selectableItemBackground"
                android:background="@drawable/dialog_btn_confirm"
                android:text="확인"
                android:textColor="@color/colorFontNormal"
                android:textSize="18dp"
                android:textFontWeight="540"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>