<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical">

    <!--Header-->
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8">
        <ImageButton
            android:id="@+id/imgBtnBack"
            android:layout_width="36dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_marginStart="4dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_back"
            android:scaleType="fitXY"
            android:background="?attr/selectableItemBackground"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="새로운 플랜 만들기"
            android:textFontWeight="600"
            android:textColor="@color/colorFontEmphasis"
            android:textSize="18sp"/>
    </RelativeLayout>

    <!--Main-->
    <LinearLayout
        android:id="@+id/MainWindow"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="84"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:layout_marginStart="22dp"
            android:text="여행 기간을 설정하세요"
            android:textColor="@color/colorFontEmphasis"
            android:textSize="26sp"/>

        <LinearLayout
            android:layout_width="374dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp">
            <ImageButton
                android:id="@+id/btnReset"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:foreground="?attr/selectableItemBackground"
                android:background="@drawable/planner_date_calendar_view_bg"
                android:src="@drawable/ic_reset"
                android:layout_marginEnd="10dp"
                android:padding="10dp"/>
            <TextView
                android:id="@+id/textViewSelectedDate"
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:gravity="center"
                android:padding="10dp"
                android:text="-"
                android:textSize="22sp"
                android:textColor="@color/colorFontEmphasis"
                android:fontFamily="@font/roboto"
                android:background="@drawable/planner_date_calendar_view_bg"/>
        </LinearLayout>

        <!-- 달력 -->
        <com.prolificinteractive.materialcalendarview.MaterialCalendarView
            android:id="@+id/calendar"
            android:layout_width="374dp"
            android:layout_height="390dp"
            android:layout_gravity="center"
            android:padding="10dp"
            android:background="@drawable/planner_date_calendar_view_bg"
            app:mcv_selectionMode="range"
            app:mcv_headerTextAppearance="@style/customCvHeaderText"
            app:mcv_weekDayTextAppearance="@style/customCvWeekDayText"
            app:mcv_dateTextAppearance="@style/customCvDateText"/>
    </LinearLayout>

    <!--Footer(메뉴)-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:gravity="right">
        <Button
            android:id="@+id/btnNext"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:paddingLeft="15dp"
            android:drawableEnd="@drawable/ic_next"
            android:text="다음"
            android:textSize="16sp"
            android:textColor="@color/colorFontEmphasis"
            android:background="@drawable/btn_background_click_effect"/>
    </LinearLayout>

</LinearLayout>