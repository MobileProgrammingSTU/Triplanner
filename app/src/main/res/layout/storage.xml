<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorBackground">
    <!--Header-->
    <RelativeLayout
        android:id="@+id/Header"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8">
        <ImageButton
            android:id="@+id/imgBtnBack"
            android:layout_width="36dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_marginStart="4dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_back"
            android:scaleType="fitXY"
            android:background="?attr/selectableItemBackground"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="저장소"
            android:textFontWeight="600"
            android:textColor="@color/colorFontEmphasis"
            android:textSize="18sp"/>
    </RelativeLayout>

    <!--Main-->
    <LinearLayout
        android:id="@+id/storageMain"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="84"
        android:orientation="vertical">

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                app:tabMode="fixed"
                app:tabGravity="fill"
                app:tabTextAppearance="@style/tabTextStyle"
                app:tabTextColor="@color/colorFontNormal"
                app:tabSelectedTextColor="@color/colorFontEmphasis"
                app:tabBackground="@drawable/storage_tab_bg_selector">
                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="내포스트"/>

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="내플랜"/>

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="♥포스트"/>

            </com.google.android.material.tabs.TabLayout>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        
    </LinearLayout>

    <!--Footer(메뉴)-->
    <LinearLayout
        android:id="@+id/FooterWindow"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:gravity="center">

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/FooterBtnHome"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/btn_background_click_effect"
            android:scaleType="fitXY"
            android:src="@drawable/ic_home" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2" />

        <ImageButton
            android:id="@+id/FooterBtnAddPlan"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/btn_background_click_effect"
            android:scaleType="fitXY"
            android:src="@drawable/ic_edit_calendar"
            android:tint="@color/colorFontEmphasis" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2" />

        <ImageButton
            android:id="@+id/FooterBtnStorage"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/btn_background_click_effect"
            android:scaleType="fitXY"
            android:src="@drawable/ic_storage" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2" />

        <ImageButton
            android:id="@+id/FooterBtnMyPage"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/btn_background_click_effect"
            android:scaleType="fitXY"
            android:src="@drawable/ic_mypage" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>

</LinearLayout>