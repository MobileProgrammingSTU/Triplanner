<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical"
            android:background="@color/colorGrayBG1">

            <TextView
                android:id="@+id/planDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp"
                android:text="1일차"
                android:textSize="22sp"
                android:textColor="@color/colorFontEmphasis"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp">
                <TextView
                    android:id="@+id/planPlace"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_centerVertical="true"
                    android:text="ㅇㅇ장소\nㅁㅁ장소"
                    android:textSize="20sp"
                    android:textColor="@color/colorFontNormal"
                    android:lineSpacingExtra="6dp"/>
                <TextView
                    android:id="@+id/planHour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="46dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:text="11시\n1시"
                    android:textSize="18sp"
                    android:textColor="@color/colorFontNormal"
                    android:textAlignment="textEnd"
                    android:lineSpacingExtra="6dp"/>
                <TextView
                    android:id="@+id/planMin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:text="30분\n5분"
                    android:textSize="18sp"
                    android:textColor="@color/colorFontNormal"
                    android:textAlignment="textEnd"
                    android:lineSpacingExtra="6dp"/>
            </RelativeLayout>

        </LinearLayout>

</androidx.cardview.widget.CardView>