<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackground">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/activity_main_view_bg_gradient_black_top"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="180dp"
                    android:layout_height="35dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="-20dp"
                    android:src="@drawable/img_activity_main_logo"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="20dp"
                    android:text="포스트"
                    android:textFontWeight="500"
                    android:textColor="@color/colorFontNormal"
                    android:textSize="24sp"
                    android:letterSpacing="0"/>
            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/img_camera"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                app:srcCompat="@drawable/camera"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:background="@drawable/planner_date_calendar_view_bg">
                <EditText
                    android:id="@+id/edt_Title"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_margin="4dp"
                    android:paddingStart="10dp"
                    android:background="@android:color/transparent"
                    android:hint="제목 입력..."
                    android:textColorHint="@color/colorFontLight"
                    android:textColor="@color/colorFontNormal"
                    android:textSize="18sp"/>
                <EditText
                    android:id="@+id/edt_subTitle"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_margin="4dp"
                    android:paddingStart="10dp"
                    android:background="@android:color/transparent"
                    android:hint="부제 입력..."
                    android:textColorHint="@color/colorFontLight"
                    android:textColor="@color/colorFontNormal"
                    android:textSize="18sp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <Spinner
                        android:id="@+id/spinner_Region"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:background="@drawable/convert_spinner_arrow"
                        android:popupBackground="@drawable/convert_spinner_arrow"
                        android:spinnerMode="dropdown"/>
                    <Spinner
                        android:id="@+id/spinner_Place"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:background="@drawable/convert_spinner_arrow"
                        android:popupBackground="@drawable/planner_date_calendar_view_bg"
                        android:spinnerMode="dropdown"/>
                </LinearLayout>

                <EditText
                    android:id="@+id/edt_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:padding="10dp"
                    android:background="@android:color/transparent"
                    android:hint="문구 입력..."
                    android:textColorHint="@color/colorFontLight"
                    android:textColor="@color/colorFontNormal"
                    android:textSize="18sp"/>
            </LinearLayout>

            <Button
                android:id="@+id/btn_write"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_margin="8dp"
                android:background="@drawable/button_background"
                android:foreground="?attr/selectableItemBackground"
                android:textSize="18sp"
                android:enabled="false"
                android:text="작성 완료"
                android:textColor="@color/colorFontLight"/>
        </LinearLayout>


    </ScrollView>



</LinearLayout>