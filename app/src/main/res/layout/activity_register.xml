<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="30dp"
    android:background="@color/colorBackground"
    tools:context=".RegisterActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginBottom="32dp"
        android:src="@drawable/img_activity_main_logo"/>

    <EditText
        android:id="@+id/et_reg_Username"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/edittext_background"
        android:hint="닉네임을 입력하세요"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:textColorHint="@color/colorFontLight"
        android:textSize="18sp"
        android:textColor="@color/colorFontNormal"/>

    <EditText
        android:id="@+id/et_reg_Email"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/edittext_background"
        android:hint="이메일을 입력하세요"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:textColorHint="@color/colorFontLight"
        android:textSize="18sp"
        android:textColor="@color/colorFontNormal"/>

    <EditText
        android:id="@+id/et_reg_PW"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/edittext_background"
        android:ems="10"
        android:hint="비밀번호를 입력하세요"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:textColorHint="@color/colorFontLight"
        android:textSize="18sp"
        android:textColor="@color/colorFontNormal"/>

    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:foreground="?attr/selectableItemBackground"
        android:layout_marginTop="32dp"
        android:enabled="false"
        android:text="등록"
        android:textSize="18sp"
        android:textColor="@color/colorFontLight"/>

    <TextView
        android:id="@+id/txt_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이미 계정이 있습니까? 로그인"
        android:textColor="@color/colorFontNormal"
        android:textSize="16sp"
        android:layout_marginTop="10dp"/>
</LinearLayout>